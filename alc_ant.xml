        <copy file="C:/github/pinternals_alc/alc_lib/mdm-admin.jar" todir="C:/github/pinternals_alc_run/alc_lib"/>
        <copy file="C:/github/pinternals_alc/alc_lib/mdm-data.jar" todir="C:/github/pinternals_alc_run/alc_lib"/>
        <copy file="C:/github/pinternals_alc/alc_lib/mdm-extension.jar" todir="C:/github/pinternals_alc_run/alc_lib"/>
        <copy file="C:/github/pinternals_alc/alc_lib/simple-xml-2.7.jar" todir="C:/github/pinternals_alc_run/alc_lib"/>
        <!--copy file="C:/github/pinternals_alc/pinternals_alc.xsd" todir="C:/github/pinternals_alc_run/alc_lib"/-->
